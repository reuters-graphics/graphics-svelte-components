{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"target": "es6",
		"module": "es6",
		"baseUrl": ".",
		"paths": {
			"$app/*": [".svelte-kit/dev/runtime/app/*", ".svelte-kit/build/runtime/app/*"],
			"$lib":["src/lib"],
  		"$lib/*":["src/lib/*"],
			"$pkg": ["package.json"],
			"$locales/*": ["locales/*"]
		}
	},
	"include": ["src/**/*.js", "src/**/*.svelte"]
}
