{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"types": ["node", "svelte"],
		"moduleResolution": "node",
		"module": "es2020",
		"target": "es2019",
		"declaration": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"allowJs": true,
		"checkJs": true,
		"emitDeclarationOnly": true,
		"baseUrl": ".",
		"outDir": "dist",
		"paths": {
			"$lib":["src/components"],
  		"$lib/*":["src/components/*"],
			"$utils":["src/utils"],
  		"$utils/*":["src/utils/*"]
		}
	},
	"include": [
		"src/**/*.js",
		"src/**/*.ts",
		"src/**/*.svelte"
	],
	"exclude": ["dist", "src/**/*.stories.svelte"]
}
