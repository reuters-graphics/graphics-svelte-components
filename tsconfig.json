{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"module": "es2020",
		"target": "es2019",
		"declaration": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": true,
		"emitDeclarationOnly": true,
		"baseUrl": ".",
		"outDir": "dist",
		"paths": {
			"$lib": ["src"],
  		"$lib/*": ["src/*"],
			"$docs": ["src/docs"],
			"$docs/*": ["src/docs/*"]
		}
	},
	"include": [
		"src/**/*.js",
		"src/**/*.ts",
		"src/**/*.svelte",
		"bin/**/*.{js,cjs}"
	],
	"exclude": ["dist"]
}
